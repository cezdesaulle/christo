{% extends 'base.html.twig' %}


    {% block TitrePage %}
        Panel des catégories
    {% endblock %}
{% block body %}
    {% for message in app.flashes('success') %}
        <div class="row mt-3 justify-content-center">
            <div class="alert alert-success col-md-6 text-center">
                {{ message }}
            </div>
        </div>

    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="row mt-3 justify-content-center">
            <div class="alert alert-danger col-md-6 text-center">
                {{ message }}
            </div>
        </div>

    {% endfor %}

    <a href="{{ path('addCategory') }}" class="btn btn-success">Ajouter</a>


    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nom</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <th scope="row">{{ categorie.id }}</th>
                <td>{{ categorie.nom }}</td>
                <td>
                    <a href="{{ path('updateCategory', {'id': categorie.id }) }}" class="btn btn-primary">Modifier</a>
                    <a onclick="confirm('Etes vous sûr de vouloir supprimer ce produit')" href="{{ path('deleteCategory', {'id': categorie.id }) }}" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
